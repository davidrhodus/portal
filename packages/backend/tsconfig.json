{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "target": "esnext",
    "outDir": "./build"
  },
  "references": [{ "path": "../types" }],
  "baseUrl": "src",
  "paths": {
    "@/*": ["*"]
  },
  "exclude": ["node_modules", "build"]
}
